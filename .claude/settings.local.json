{
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.dokploy.com)",
      "WebFetch(domain:railpack.com)",
      "Bash(nslookup:*)",
      "Bash(dig:*)",
      "Bash(bun run:*)",
      "Bash(biome check:*)",
      "WebFetch(domain:www.mapbox.com)",
      "Bash(bun add:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/use_bun.py"
          }
        ]
      }
    ]
  }
}
